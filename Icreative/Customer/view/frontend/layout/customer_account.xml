<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\Delimiter" name="customer-account-navigation-status-delimiter" template="Magento_Customer::account/navigation-delimiter.phtml" before="customer-account-navigation-status" />
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-status">
                <arguments>
                    <argument name="path" xsi:type="string">status/customer/index</argument>
                    <argument name="label" xsi:type="string">Status</argument>
                    <argument name="sortOrder" xsi:type="number">9999</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
